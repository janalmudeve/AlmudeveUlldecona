class Obra{
    private String titol;
    private int durada;
    private String autor;
    private boolean edat;
 
    // Constructor \\
    public Obra(String titol, int durada, String autor, boolean edat) {
        this.titol = titol;
        this.durada = durada;
        this.autor = autor;
        this.edat = edat;
    }
  
    public String getTitol(){
        return this.titol;
    }
  
    public int getDurada(){
        return this.durada;
    }
  
    public String getAutor(){
        return this.autor;
    }
 
    public boolean getEdat(){
        return this.edat;
    }
  
    public void setTitol(String titol){
        this.titol = titol;
    }
  
    public void setDurada(int durada){
        this.durada = durada;
    }
  
    public void setAutor(String autor){
        this.autor = autor;
    }
 
    public void setEdat(boolean edat){
        this.edat = edat;
    }
  
    public String toString(){
        String retorn = "El titol de l'obra Ã©s: " + this.titol + ", el nom de l'autor: " + this.autor + ", la funncio dura: " + this.durada + ", edat de l'espectador: " + this.edat;
        return retorn;
    }
 
    // MALAMENT
    public static void main(String[] args) {
        Obra obra1 = new Obra("I didn't do it", 20, "Olivia Holt", true);
        Obra obra2 = new Obra("I didn't do it", 22, "Austin North", true);
        Obra obra3 = new Obra("I didn't do it", 23, "Piper Curda", false);
 
        // Prova 1 (canviar valors)
        // imprimim per veure els valors per defecte
        obra1.toString();
        obra2.toString();
        obra3.toString();
        // Canviem els valors
        obra1.setEdat(false);
        obra2.setDurada(21);
        obra3.setTitol("La Que Se Avecina");
        // Comprovem
        obra1.toString();
        obra2.toString();
        obra3.toString();
    }
 }
