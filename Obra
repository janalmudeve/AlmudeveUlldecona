package Teatregrama;

public class Obra {
    private String titol;
    private int durada;
    private String autor;
    private boolean edat;

    // Constructor \\
    public Obra(String titol, int durada, String autor, boolean edat) {
        this.titol = titol;
        this.durada = durada;
        this.autor = autor;
        this.edat = edat;
    }

    /**
     * Obtenir valor de Titol
     * 
     * @return String
     */
    public String getTitol() {
        return this.titol;
    }

    /**
     * Obtenir valor de Durada
     * 
     * @return int
     */
    public int getDurada() {
        return this.durada;
    }

    /**
     * Obtenir valor de Autor
     * 
     * @return String
     */
    public String getAutor() {
        return this.autor;
    }

    /**
     * Obtenir valor de Edat
     * 
     * @return boolean
     */
    public boolean getEdat() {
        return this.edat;
    }

    /**
     * Donar valor a Titol
     * 
     * @param titol
     */
    public void setTitol(String titol) {
        this.titol = titol;
    }

    /**
     * Donar valor a Durada
     * 
     * @param durada
     */
    public void setDurada(int durada) {
        this.durada = durada;
    }

    /**
     * Donar valor a Autor
     * 
     * @param autor
     */
    public void setAutor(String autor) {
        this.autor = autor;
    }

    /**
     * Donar valor a Edat
     * 
     * @param edat
     */
    public void setEdat(boolean edat) {
        this.edat = edat;
    }

    /**
     * Imprimir tots els atributs d'Obra
     * 
     * @return String
     */
    public String toString() {
        String retorn = "El titol de l'obra Ã©s: " + this.titol + ", el nom de l'autor: " + this.autor
                + ", la funncio dura: " + this.durada + ", edat de l'espectador: " + this.edat;
        return retorn;
    }
}
