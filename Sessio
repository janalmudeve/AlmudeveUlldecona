    public void setSeients(Espectador[][] seients) { // BÉ
        this.seients = seients[18][14];
    }

    // "Facilets"
    public boolean seientBuit(int filera, int columna) {
        if(this.seients[filera][columna] == null)
            return true;
        else
            return false;
    }

    public boolean assignarSeient(Espectador espectador, int filera, int columna) {
        if(this.seientBuit(filera, columna))
            this.seients[filera][columna] = espectador;
        else
            return false;
        
        return true;
    }


