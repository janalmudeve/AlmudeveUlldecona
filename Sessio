class Sessio {
    // BÉ
    private Obra obra;
    private double preu;
    private String hora;
    private String dia;
    private Espectador[][] seients; 

    // Constructor \\
    public Sessio(String obra, double preu, String hora, String dia) {
        this.obra = obra;
        this.preu = preu;
        this.hora = hora;
        this.dia = dia;
        this.seients = new Espectador[18][14];
    }

    public Obra getObra() { // BÉ
