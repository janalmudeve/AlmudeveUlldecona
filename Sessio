class Sessio {

    private Obra obra = new Obra("I didn't do it", 24, "Olivia Holt", true);
    private double preu;
    private String hora;
    private String dia;
    private Espectador[][] seients;

    // Constructor \\
    public Sessio(Obra obra, double preu, String hora, String dia) {
        this.obra = new Obra (obra);
        this.preu = preu;
        this.hora = hora;
        this.dia = dia;
        this.seients = new Espectador[18][14];
    }

    public Obra getObra() {
        return this.obra;
    }

    public double getPreu() {
        return this.preu;
    }

    public String getHora() {
        return this.hora;
    }

    public String getDia() {
        return this.dia;
    }

    public Espectador[][] getSeients() {
        return this.seients;
    }

    public void setObra(Obra obra) {
        this.obra = obra;
    }

    public void setPreu(double preu) {
        this.preu = preu;
    }

    public void setHora(String hora) {
        this.hora = hora;
    }

    public void setDia(String dia) {
        this.dia = dia;
    }

    public void setSeients(Espectador[][] seients) {
        this.seients = seients[18][14];
    }

    public boolean seientBuit(int filera, int columna) {
        if (this.seients[filera][columna] == null)
            return true;
        else
            return false;
    }

    public boolean assignarSeient(Espectador espectador, int filera, int columna) {
        if (this.seientBuit(filera, columna))
            this.seients[filera][columna] = espectador;
        else
            return false;

        return true;
    }

    public boolean potEntrar() {
        //major edat
        
        //te diners
        
        //obra es per a majors
        
    }

    public void totalRecaudat() {

    }

    public String toString(String resultat) {
        resultat = "La persona s'asentara a la butaca" ;
        return resultat;
    }

}
