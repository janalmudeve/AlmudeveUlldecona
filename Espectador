package Teatregrama;

public class Espectador{
    // BÉ
    private String nom;
    private int edat;
    private double diners;

    // Constructor 1 \\
    public Espectador(String nom, int edat, double diners) {
        this.nom = nom;
        this.edat = edat;
        this.diners = diners;
    }

    // Constructor 2 \\
    public Espectador(int edat, double diners) {
        this.nom = "Anònim";
        this.edat = edat;
        this.diners = diners;
    }

    // Contructor 3 \\
    public Espectador(double diners) {
        this.nom = "Anònim";
        this.edat = 99;
        this.diners = diners;
    }

    public String getNom(){ // BÉ
        return this.nom;
    }

    public int getEdat(){ // BÉ
        return this.edat;
    }

    public double getDiners(){ // BÉ
        return this.diners;
    }

    public void setNom(String nom){ // BÉ
        // En Anglès diu "això (atribut) és --> (equival a està variable)"
        this.nom = nom;
    }

    public void setEdat(int edat){ // BÉ
        this.edat = edat;
    }

    public void setDiners(double diners){ // BÉ
        this.diners = diners;
    }

    public void pagarEntrada(){
        this.diners = this.diners - 24;
    }

    public boolean majorEdat(){ // BÉ
        if(this.edat >= 18)
            return true;
        else
            return false;
    }

    public boolean teDiners(double preu){ // BÉ
        if(this.diners - preu < 0)
            return false;
        else
            return true;
    }

    public String toString(){ // BÉ
        System.out.println("El nom de la persona és: " + this.nom + ", edat: " + this.edat + ", diners que té: " + this.diners + "€");
        return "El nom de la persona és: " + this.nom + ", edat: " + this.edat + ", diners que té: " + this.diners + "€";
    }
}
