package Teatregrama;

public class Espectador {

    private String nom;
    private int edat;
    private double diners;

    // Constructor \\
    public Espectador(String nom, int edat, double diners) {
        this.nom = nom;
        this.edat = edat;
        this.diners = diners;
    }

    public Espectador(int edat, double diners) {
        this.nom = "Anònim";
        this.edat = edat;
        this.diners = diners;
    }

    public Espectador(double diners) {
        this.nom = "Anònim";
        this.edat = 99;
        this.diners = diners;
    }

    /**
     * Obtenir el Nom
     * 
     * @return String
     */
    public String getNom() {
        return this.nom;
    }

    /**
     * Obtenir l'Edat
     * 
     * @return int
     */
    public int getEdat() {
        return this.edat;
    }

    /**
     * Obtenir els Diners
     * 
     * @return double
     */
    public double getDiners() {
        return this.diners;
    }

    /**
     * Donar valor a Nom
     * 
     * @param nom
     */
    public void setNom(String nom) {

        this.nom = nom;
    }

    /**
     * Donar valor a Edat
     * 
     * @param edat
     */
    public void setEdat(int edat) {
        this.edat = edat;
    }

    /**
     * Donar valor a Diners
     * 
     * @param diners
     */
    public void setDiners(double diners) {
        this.diners = diners;
    }

    public void pagarEntrada() {
        this.diners = this.diners - 24;
    }

    /**
     * Comprovar que l'Espectador sigue major d'edat
     * 
     * @return boolean
     */
    public boolean majorEdat() {
        if (this.edat >= 18)
            return true;
        else
            return false;
    }

    /**
     * comprovar que tinge diners suficients l'Espectador
     * 
     * @param preu
     * @return boolean
     */
    public boolean teDiners(double preu) {
        if (this.diners - preu < 0)
            return false;
        else
            return true;
    }

    /**
     * Imprimir tots els atributs d'Espectador
     * 
     * @return String
     */
    public String toString() {
        System.out.println("El nom de la persona és: " + this.nom + ", edat: " + this.edat + ", diners que té: "
                + this.diners + "€");
        return "El nom de la persona és: " + this.nom + ", edat: " + this.edat + ", diners que té: " + this.diners
                + "€";
    }
}
